---
import Externallink from '../../public/Externallink.astro';
import OpenGithublink from '../../public/OpenGithublink.astro';
---

<div class="contenedor__proyectos" id="proyectos" data-dark>
  <h2 class="contenedor__proyectos--h2">Proyectos</h2>
</div>

<section class="contenedor__proyecto--div" data-dark>
  <picture class="contenedor__proyecto-explicacion">
    <img
      src="/btc.webp"
      alt="bitcoin"
      title="bitcoin-app"
      class="contenedor__proyecto--img"
    />
    <p>Bitcoin</p>
    <div>
      <a
        rel="noopener noreferrer"
        href="https://cryptocodebtc.netlify.app/"
        target="_blank"
      >
        <button class="boton__div" type="submit">
          <Externallink />
        </button></a
      >
      <a
        rel="noopener noreferrer"
        href="https://github.com/Martinmessner/WebSocket-React-BTC"
        target="_blank"
      >
        <button class="boton__div" type="submit"><OpenGithublink /></button></a
      >
    </div>
    <p>React - WebSockets</p>
  </picture>
  <picture class="contenedor__proyecto-explicacion">
    <img
      src="/busqueda-img.webp"
      alt="busqueda-img-app"
      title="busqueda-de-imagenes"
      class="contenedor__proyecto--img"
