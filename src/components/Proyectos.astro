<style>
  img {
    width: 100%;
  }

  section {
    display: grid;
    grid-template-columns: repeat(2, minmax(100px, 430px));
    justify-content: center;
    text-align: center;
    gap: 3em;
  }
  button {
    padding: 0.2em;
    background: none;
    border: none;
    cursor: pointer;
  }

  button:hover {
    transform: scale(1.2);
  }

  figure {
    border: 2px white solid;
  }
  .contenedor__proyectos--h2 {
    text-align: center;
    padding: 1em;
  }
</style>
